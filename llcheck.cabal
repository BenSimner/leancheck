category:            Testing
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Test.Check,
                       Test.Check.Utils,
                       Test.Types,
                       Test.Operators,
                       Test.Check.Function,
                       Test.Check.Function.ListsOfPairs,
                       Test.Check.Function.CoListable,
                       Test.Check.Function.Periodic,
                       Test.Check.Function.Show
  other-modules:       Test.Check.Invariants
  -- other-extensions:    
  build-depends:       base
  -- hs-source-dirs:      
  default-language:    Haskell2010

test-suite test
  type:                exitcode-stdio-1.0
  main-is:             test.hs
  hs-source-dirs:      ., tests
  build-depends:       base
  default-language:    Haskell2010

test-suite types
  type:                exitcode-stdio-1.0
  main-is:             test-types.hs
  hs-source-dirs:      ., tests
  build-depends:       base
  default-language:    Haskell2010

test-suite utils
  type:                exitcode-stdio-1.0
  main-is:             test-utils.hs
  hs-source-dirs:      ., tests
  build-depends:       base
  default-language:    Haskell2010

test-suite operators
  type:                exitcode-stdio-1.0
  main-is:             test-operators.hs
  hs-source-dirs:      ., tests
  build-depends:       base
  default-language:    Haskell2010
